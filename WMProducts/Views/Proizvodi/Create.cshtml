@model WMProducts.ViewModel.ProizvodViewModel
@{
    ViewBag.Title = "Kreiraj";
}

<h2>Kreiraj</h2>


@using (Html.BeginForm("Create", "Proizvodi"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Proizvod</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">* Naziv </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control", placeholder = "Unesi naziv..." } })
                @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Opis, 4, 40, new { @class = "form-control", placeholder = "Unesi opis..." })
                @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">* Kategorija </label>
            <div class="col-md-10">
                @Html.DropDownListFor(p => p.KategorijaId, new SelectList(Model.Kategorije,"Id","Naziv"), "-- Izaberi kategoriju --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.KategorijaId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">* Proizvođač </label>
            <div class="col-md-10">
                @Html.DropDownListFor(p => p.ProizvođačId, new SelectList(Model.Proizvođači, "Id", "Naziv"), "-- Izaberi proizvođača --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProizvođačId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">* Dobavljač </label>
            <div class="col-md-10">
                @Html.DropDownListFor(p => p.DobavljačId, new SelectList(Model.Dobavljači, "Id", "Naziv"), "-- Izaberi dobavljača --", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DobavljačId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">* Cena </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cena, new { htmlAttributes = new { @class = "form-control", placeholder = "Unesi cenu...", Value = "" } })
                @Html.ValidationMessageFor(model => model.Cena, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kreiraj" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad na listu", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
