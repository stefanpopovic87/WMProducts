@model WMProducts.Models.Proizvod

    @{
        ViewBag.Title = "Obriši";
    }

    <h2>Obriši</h2>

    <h4>Da li si siguran da želiš da obrišeš?</h4>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Naziv)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Naziv)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Opis)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Opis)
            </dd>
            <dt>
                Kategorija
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Kategorija.Naziv)
            </dd>

            <dt>
                Proizvođač
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Proizvođač.Naziv)
            </dd>

            <dt>
                Dobavljač
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Dobavljač.Naziv)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Cena)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Cena) RSD
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Obriši" class="btn btn-danger" /> |
                @Html.ActionLink("Nazad na listu", "Index")
            </div>
        }
    </div>
