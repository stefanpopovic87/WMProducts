@using WMProducts.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    <li class="brand @Html.IsSelected(actions: "Index", controllers: "Proizvodi")">
                        <a href="@Url.Action("Index", "Proizvodi")"><span>WM</span> Proizvodi</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="@Html.IsSelected(actions: "Index", controllers: "Kategorije")">
                            <a href="@Url.Action("Index", "Kategorije")">Kategorije</a>
                        </li>
                        <li class="@Html.IsSelected(actions: "Index", controllers: "Proizvođači")">
                            <a href="@Url.Action("Index", "Proizvođači")">Proizvođači</a>
                        </li>
                        <li class="@Html.IsSelected(actions: "Index", controllers: "Dobavljači")">
                            <a href="@Url.Action("Index", "Dobavljači")">Dobavljači</a>
                        </li>
                    }

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - WM Proizvodi</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/custom-scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
